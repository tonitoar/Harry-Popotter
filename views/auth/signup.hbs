<div id="form" class="text-center">
  <h2 class="fw-bold mb-5 display-5">Sign Up</h2>
  <form action="/auth/signup" method="POST" enctype="multipart/form-data">

    <label class="btn btn-primary"  > Username
      <input type="text" name="username" placeholder="Your username" />
    </label>

    <label class="btn btn-primary" > Email
      <input type="email" name="email" placeholder="Your email" />
    </label>

    <label class="btn btn-primary"> Password
      <input type="password" name="password" placeholder="Your password" />
    </label>

    <label class="btn btn-primary"> Profile image
      <input type="file" name="image" placeholder="Your image"/>
    </label>

    <button type="submit" class="btn btn-primary">Sign Up</button>


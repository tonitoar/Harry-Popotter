<div id="login-form" class="text-center">
  <h2 class="fw-bold mb-5 display-5 ">Log In</h2>
  <form action="/auth/login" method="POST">

    <label class="btn btn-outline-primary"> Username
      <input type="text" name="username" placeholder="" />
    </label>

    <label class="btn btn-outline-primary"> Email
      <input type="email" name="email" placeholder="" />
    </label>

    <label class="btn btn-outline-primary"> Password
      <input type="password" name="password" placeholder="" />
    </label>

    <button type="submit" class="btn btn-primary">Log In</button>


    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>






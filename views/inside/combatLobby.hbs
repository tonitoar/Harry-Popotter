<form action="/combat/lobby" method="POST">
    <div class="user-profile">
  {{!-- <h2>{{currentUser.homeName}}</h2> --}}
  <h2>{{currentUser.username}}</h2>
  <img src="{{currentUser.photo}}" alt="{{currentUser.photo}}" width="200" height="auto">
  <h3>{{currentUser.house}}</h3>
  <h4>{{currentUser.spells}}</h4>
  <ul>
    {{#each currentUser.spells}} {{!-- // typeOf object  --}}
    <li>
      {{!-- {{@key}} --> Power Level: {{this}} --}}
      {{this.spells.name}} --> Power Level: {{this}}
    </li>
    {{/each}}
  </ul>
</div>

<div class="opponent-section">
  <button id="choose-opponent-btn">Choose Opponent</button>
  <div class="opponent-list">
    <h4>Registered Opponent Users:</h4>
    <ul>
      {{#each opponents}}
      <li>
        <span>{{this.username}} : <img src="{{this.photo}}" alt="{{this.photo}}" width="100" height="auto"> {{this.house}}</span>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
